<UserControl x:Class="GACore.UI.Controls.IsConnectedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GACore.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <local:LabelContentControl Header="IsConnected:">
        <CheckBox Grid.Column="1" IsEnabled="False" IsChecked="{Binding Path=IsConnected, Mode=OneWay}" />
    </local:LabelContentControl>
</UserControl>